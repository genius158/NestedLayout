<?xml version="1.0" encoding="utf-8"?>

<com.yan.nestedlayout.NestedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yan.nestedlayout.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">
    <com.yan.nestedlayout.NestedFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yan.nestedlayout.NestedLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </com.yan.nestedlayout.NestedLinearLayout>
    </com.yan.nestedlayout.NestedFrameLayout>
</com.yan.nestedlayout.NestedRelativeLayout>